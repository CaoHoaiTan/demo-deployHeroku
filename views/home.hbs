<div class="container">
    <div class="row">
        {{#each listPosts}}
        <div class="col-6" style="margin-top: 15px;">
            <div class="card text-center">
                <div class="card-header">
                    {{this.title}}
                </div>
                <div class="card-body">
                    <p class="card-text">{{this.content}}</p>
                    <form method="POST" action="/post/{{this.id}}?_method=DELETE">
                        <a href="/post/{{this.id}}" class="btn btn-primary">Go Detail</a>
                        <a href="/post/{{this.id}}/edit" class="btn btn btn-warning">Edit</a>
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <span class="mr-2">{{#moment this.date}}{{/moment}} </span> &bullet;
                    <span class="ml-2"><i class="fa fa-comments-o"
                            style="font-size:20px"></i>{{this.commentNumber}}</span>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>