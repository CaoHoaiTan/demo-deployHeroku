<form style="margin-top: 30px" method="POST" action="/post">
    <div class="mb-3">
        <label for="titleBlog" class="form-label">Title Blog</label>
        <input type="text" class="form-control" id="titleBlog" name="title">
    </div>
    <div class="mb-3">
        <label for="contentBlog" class="form-label">Content Blog</label>
        <textarea class="form-control" id="contentBlog" name="content" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-success float-end">Post</button>
</form>