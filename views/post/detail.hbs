<section class="site-section py-lg">
    <div class="container">
        <div class="row blog-entries element-animate" style="justify-content:center ; margin-top: 32px">
            <div class="col-md-12 col-lg-10 main-content">
                <div class="post-meta">
                    <span class="mr-2">{{#moment this.date}}{{/moment}} </span> &bullet;
                    <span class="ml-2"><span class="fa fa-comments"></span> {{commentNumber}}</span>
                </div>
                <h1 class="mb-4">{{blog.title}}</h1>

                <div class="post-content-body">
                    <p>{{blog.content}}</p>
                </div>

                <div class="container mt-5" style="max-width: 1620px;">
                    <div class="row  d-flex justify-content-start">
                        <div class="col-md-7">
                            <div class="headings d-flex justify-content-between align-items-center mb-3">
                                <h5><i class="fa fa-comments-o" style="font-size:28px"></i>
                                    comments({{commentNumber}})</h5>
                            </div>

                            {{#each commentsInPost}}
                            <div class="card p-3 mt-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="user d-flex flex-row align-items-center">
                                        <img src="https://i.imgur.com/C4egmYM.jpg" width="30"
                                            class="user-img rounded-circle mr-2">
                                        <span><small class="font-weight-bold text-primary">{{this.author}}</small>
                                            <small class="font-weight-bold">{{this.content}} </small></span>
                                    </div>
                                    <small>{{#fromnow this.date}}{{/fromnow}}</small>
                                </div>
                                <div class="action d-flex justify-content-end mt-2 align-items-center">
                                    <div class="icons align-items-center">
                                        <i class="fa fa-check-circle-o check-icon text-primary"></i>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>

                        {{!-- Post comment --}}
                        <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
                            <form id="algin-form" method="POST" action="/post/{{blog.id}}/comment">
                                <div class="form-group">
                                    <h4>Post a comment</h4>
                                    <label for="message">Message</label>
                                    <textarea name="content" id="" msg cols="30" rows="5" class="form-control"
                                        style="background-color: rgb(132, 236, 227);"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" name="author" id="fullname" class="form-control">
                                </div>
                                <div class="form-group">
                                    <button type="submit" style="
                                                        margin: 10px;
                                                        padding: 6px;
                                                        padding-top: 2px;
                                                        padding-bottom: 2px;
                                                        text-align: center;
                                                        background-color: #1fec41;
                                                        border-color: #a88734 #9c7e31 #846a29;
                                                        color: black;
                                                        border-width: 1px;
                                                        border-style: solid;
                                                        border-radius: 13px;
                                                        width: 50%;
" id="post" class="btn">Post Comment</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>